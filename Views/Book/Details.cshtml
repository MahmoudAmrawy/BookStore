@model BookStore.Models.Book

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <h1>Details</h1>

    <div>
        <h4>Book</h4>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.IdBook)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.IdBook)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Auther.NameAuther)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Auther.NameAuther)
            </dd>

               @if (Model.ImgUrl != null)
               {
                    <dt class = "col-sm-2">
                        Image :
                    </dt>
                    <dd class = "col-sm-10">
                        <img src="~/Uploads/@Model.ImgUrl" style="width:60px;" class="img-thumbnail" />
                    </dd>
               }
        </dl>
    </div>
    <div>
        @Html.ActionLink("Edit", "Edit", new { id = Model.IdBook }) |
        <a asp-action="Index">Back to List</a>
    </div>
</div>
