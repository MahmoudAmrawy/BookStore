@model BookStore.Models.Auther

@{
    ViewData["Title"] = "Edit";
}
<div class="container">

    <h1>Edit</h1>

    <h4>Auther</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="IdAuther" class="control-label"></label>
                    <input asp-for="IdAuther" readonly class="form-control" />
